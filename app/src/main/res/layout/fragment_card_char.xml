<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    tools:context=".card_char">

    <TextView
        android:id="@+id/txvElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F8C9C9"
        android:text="Element"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="664dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="13">

        <TextView
            android:id="@+id/imgIllustration"
            android:layout_width="match_parent"
            android:layout_height="252dp"
            android:layout_weight="9"
            android:background="#CEDFF1"
            android:gravity="center"
            android:text="Illustration" />

        <TextView
            android:id="@+id/txvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#E1D3A9"
            android:gravity="center"
            android:text="Name" />

        <TextView
            android:id="@+id/txvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#D8D8D7"
            android:gravity="center"
            android:text="Description" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:background="#F8C9C9"
        android:text="Artist"
        android:textSize="24sp" />

</FrameLayout>