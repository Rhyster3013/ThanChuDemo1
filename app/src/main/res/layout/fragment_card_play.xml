<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86BF44"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".fragment.card_play">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txvElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F8C9C9"
        android:text=" Element "
        android:layout_weight="1"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="9"
        android:weightSum="13"
        android:padding="4dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="4dp"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/imgIllustration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="#CEDFF1"
            android:gravity="center"
            android:text="Illustration" />

        <TextView
            android:id="@+id/txvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#E1D3A9"
            android:gravity="center"
            android:text="Name" />

        <TextView
            android:id="@+id/txvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#D8D8D7"
            android:gravity="center"
            android:text="Description" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_weight="1"
        android:background="#F8C9C9"
        android:text=" Artist "
        android:textSize="24sp" />

</androidx.appcompat.widget.LinearLayoutCompat>